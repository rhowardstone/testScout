# testScout Environment Variables Configuration
#
# Copy this file to .env and fill in your API keys

# =============================================================================
# AI Backend Configuration
# =============================================================================

# Google Gemini API Key (Recommended)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Key (Alternative)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Backend Selection
# =============================================================================

# Default backend to use: "gemini" or "openai"
# DEFAULT_BACKEND=gemini

# Default model for each backend
# GEMINI_MODEL=gemini-2.0-flash
# OPENAI_MODEL=gpt-4o

# =============================================================================
# Playwright Configuration
# =============================================================================

# Browser to use: "chromium", "firefox", "webkit"
# BROWSER=chromium

# Headless mode: true or false
# HEADLESS=true

# Browser launch timeout (milliseconds)
# BROWSER_TIMEOUT=30000

# =============================================================================
# Test Configuration
# =============================================================================

# Default timeout for actions (milliseconds)
# ACTION_TIMEOUT=5000

# Default timeout for assertions (seconds)
# ASSERTION_TIMEOUT=10

# Default timeout for page loads (seconds)
# PAGE_LOAD_TIMEOUT=30

# =============================================================================
# Explorer Configuration
# =============================================================================

# Maximum actions for autonomous exploration
# EXPLORER_MAX_ACTIONS=50

# Maximum time for exploration (seconds)
# EXPLORER_MAX_TIME=300

# Maximum navigation depth
# EXPLORER_MAX_DEPTH=5

# =============================================================================
# Logging and Reporting
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
# LOG_LEVEL=INFO

# Directory for test reports
# REPORT_DIR=./reports

# Directory for screenshots
# SCREENSHOT_DIR=./screenshots

# =============================================================================
# Development
# =============================================================================

# Enable debug mode
# DEBUG=false

# Save all screenshots (including duplicates)
# SAVE_ALL_SCREENSHOTS=false

# Verbose AI responses
# VERBOSE_AI=false
